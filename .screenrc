defencoding UTF-8
vbell on
autodetach on
startup_message off
pow_detach_msg "Screen session of \$LOGNAME \$:cr:\$:nl:ended."
defscrollback 100000
bind k
bind ^k
bind .
bind ^\
bind \\
bind ^h
bind h
bind 'K' kill
bind 'I' login on
bind 'O' login off
bind '}' history
register [ "\033:se noai\015a"
register ] "\033:se ai\015a"
bind ^] paste [.]
caption always "%3n %t%? @%u%?%? [%h]%?%=%c"
hardstatus alwayslastline "[%02c] %`%-w%{=b bw}%n %t%{-}%+w|%h"
escape ^Tt
